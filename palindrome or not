def is_palindrome(input_str):
    # Remove non-letter characters and convert the string to lowercase
    cleaned_str = ''.join([ch.lower() for ch in input_str if ch.isalpha()])
    
    # Check if the cleaned string is equal to its reverse
    return cleaned_str == cleaned_str[::-1]

# Test cases
input1 = "Was it a car or a cat I saw?"
input2 = "I Love DSA"
input3 = "taco cat"

print(f"'{input1}' is a palindrome:", is_palindrome(input1))
print(f"'{input2}' is a palindrome:", is_palindrome(input2))
print(f"'{input3}' is a palindrome:", is_palindrome(input3))

